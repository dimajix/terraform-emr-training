<VirtualHost *:80>
    ServerName ap.{{aliasHostName}}
    ServerAdmin webmaster@localhost
    DocumentRoot /var/www/html

    RemoteIPHeader X-Forwarded-For
    RequestHeader set X-Forwarded-Proto 'http'
    RequestHeader set X-Forwarded-Host 'ap.{{aliasHostName}}:80'
    RequestHeader set X-Forwarded-Server 'ap.{{aliasHostName}}'
    RequestHeader set X-Forwarded-Port "80"

    RewriteEngine On
    ProxyVia Off
    ProxyRequests off
    ProxyPreserveHost On
    ProxyHTMLEnable Off
    ProxyHTMLMeta Off
    ProxyHTMLExtended Off
    AllowEncodedSlashes NoDecode

    ProxyHTMLURLMap http://{{target_master}}:20888/ /
	<Location />
        AuthType Basic
        AuthName "Dimajix Training Environment"
        AuthBasicProvider file
        AuthUserFile "{{htpasswd}}"
        Require user {{username}}

    	ProxyPass http://{{target_master}}:20888/
        ProxyPassReverse /
        Header unset X-Content-Type-Options
	</Location>
</VirtualHost>


<VirtualHost *:443>
    ServerName ap.{{aliasHostName}}
    ServerAdmin webmaster@localhost
    DocumentRoot /var/www/html

    SSLEngine On
    SSLCompression off
    SSLProtocol all -SSLv2 -SSLv3
    SSLCipherSuite EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH:ECDHE-RSA-AES128-SHA
    SSLCertificateFile /etc/apache2/ssl/ap.{{aliasHostName}}.cert
    SSLCertificateKeyFile /etc/apache2/ssl/ap.{{aliasHostName}}.key

    RemoteIPHeader X-Forwarded-For
    RequestHeader set X-Forwarded-Proto 'https'
    RequestHeader set X-Forwarded-Host 'ap.{{aliasHostName}}:443'
    RequestHeader set X-Forwarded-Server 'ap.{{aliasHostName}}'
